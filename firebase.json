{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "client/dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/api/**",
				"run": {
					"serviceId": "moyo",
					"region": "asia-northeast3"
				}
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	}
}
  